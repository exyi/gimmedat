<!DOCTYPE html>
<html>
<head>
    <title>Gimmedat</title>
    <style>
        body {
            max-width: 40rem;
            font-family: sans-serif;
            margin-left: auto;
            margin-right: auto;
            font-size: 150%;
        }
        .progressbar > div {
            background-color: rgba(120, 255, 138, 0.753);
            color: white;
            width: 0%;
            text-align: center;
        }
        .progressbar {
            margin-top: 0.5em;
            background-color: lightgray;
            width: 100%;
            height: 1.5em;
            border-radius: 0.2em;
        }

        pre {
            overflow-inline: auto;
            background: lightgray;
            border-radius: 0.2em;
        }
    </style>
    <script>
        function update_progressbar(id, step, total) {
            let pr = document.getElementById(id)
            let inner = pr.firstChild
            inner.innerText = `${step}/${total}`;
            inner.style.width = `${Math.round(step/total*100)}%`;
        }
    </script>
</head>
<body>
    {% block body %}
    {% endblock %}
</body>
</html>